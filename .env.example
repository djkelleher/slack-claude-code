# Slack Bot Configuration
# Get these from https://api.slack.com/apps

# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-token-here

# App-Level Token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-token-here

# Signing Secret (from Basic Information > App Credentials)
SLACK_SIGNING_SECRET=your-signing-secret-here

# Database Configuration
DATABASE_PATH=./data/slack_claude.db

# Default working directory for Claude CLI
DEFAULT_WORKING_DIR=/home/dan/projects

# Command timeout in seconds (default: 300 = 5 minutes)
COMMAND_TIMEOUT=300

# PTY Session Configuration
SESSION_IDLE_TIMEOUT=1800

# Multi-Agent Configuration
PLANNER_MAX_TURNS=10
WORKER_MAX_TURNS=30
EVALUATOR_MAX_TURNS=10

# Budget Configuration
USAGE_THRESHOLD_DAY=85.0
USAGE_THRESHOLD_NIGHT=95.0
NIGHT_START_HOUR=22
NIGHT_END_HOUR=6

# Permission Configuration
PERMISSION_TIMEOUT=300
AUTO_APPROVE_TOOLS=Read,Glob,Grep,LSP

# Claude Code Permission Mode
# - approve-all: Auto-approve all file operations (recommended for personal use)
# - prompt: Prompt for approval via Slack buttons (not fully implemented)
# - deny: Deny all file operations (read-only mode)
CLAUDE_PERMISSION_MODE=approve-all

# Plan Mode Configuration
PLAN_APPROVAL_TIMEOUT=600
